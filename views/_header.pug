header.header 
    nav.nav.nav--tours
        a(href="/").nav__el All tours
        form.nav__search
        button.nav__search-btn
            svg
                use(xlink:href="/img/icons.svg#icon-search")
        input(type="text", name="search", placeholder="Search tours").nav__search-input
    
    div.header__logo
        img(src="/img/logo-white.png", alt="Natours logo")

    <nav class="nav nav--user">
        if user
            a(href="").nav__el.nav__el--logout Log out
            a(href="/me").nav__el 
                img(src=`/img/users/${user.photo}`, alt=`${user.name} image`).nav__user-img
                span= user.name.split(" ")[0]
        else    
            a(href="/login").nav__el Log in
            a(href="/signup").nav__el.nav__el--cta Sign up